{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", ".env", "**/.env"],
  "globalEnv": ["GITHUB_TOKEN", "PACKAGE_VERSION", "NODE_ENV", "TEST"],
  "globalPassThroughEnv": ["CI", "DEBUG", "GITHUB_*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!README.md",
        "!scripts/**",
        "!eslint.config.ts",
        "!prettier.config.js",
        "!commitlint.config.ts",
        "!lint-staged.config.ts",
        "!.npm-upgrade.json",
        "!.prettierignore",
        "!vitest.config.ts",
        "!**/*.test.ts",
        "!**/*.test.tsx",
        "!**/test/**/*"
      ],
      "outputs": [".next/**", "dist/**"]
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "dev": {
      "dependsOn": ["^build"],
      "envMode": "loose",
      "cache": false,
      "persistent": true
    },
    "test": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "!README.md",
        "!scripts/**",
        "!eslint.config.ts",
        "!prettier.config.js",
        "!commitlint.config.ts",
        "!lint-staged.config.ts",
        "!.npm-upgrade.json",
        "!.prettierignore"
      ]
    },
    "//#test:root": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "!README.md",
        "!scripts/**",
        "!eslint.config.ts",
        "!prettier.config.js",
        "!commitlint.config.ts",
        "!lint-staged.config.ts",
        "!.npm-upgrade.json",
        "!.prettierignore"
      ],
      "outputs": ["coverage/**"]
    },
    "clean": {
      "cache": false
    }
  }
}
