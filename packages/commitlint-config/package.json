{
  "name": "@jakoblierman/commitlint-config",
  "description": "Commit lint configuration",
  "keywords": [
    "commitlint",
    "commitlint-config",
    "conventional-changelog"
  ],
  "version": "3.0.0",
  "type": "module",
  "engines": {
    "node": ">=22.16.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist .turbo",
    "dev": "tsup --watch",
    "test": "vitest"
  },
  "dependencies": {
    "@commitlint/config-conventional": "~19.8.1",
    "@commitlint/types": "~19.8.1"
  },
  "devDependencies": {
    "@commitlint/lint": "^19.8.1",
    "@commitlint/load": "^19.8.1",
    "@jakoblierman/tsconfig": "workspace:*",
    "@types/node": "^22",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@commitlint/cli": "^19.8.1"
  }
}
