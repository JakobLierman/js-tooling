{
  "name": "@jakoblierman/commitlint-config",
  "description": "Commit lint configuration",
  "keywords": [
    "commitlint",
    "commitlint-config",
    "conventional-changelog"
  ],
  "version": "3.0.2",
  "engines": {
    "node": ">=22.18.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist .turbo",
    "dev": "tsup --watch",
    "test": "vitest"
  },
  "dependencies": {
    "@commitlint/config-conventional": "~20.2.0",
    "@commitlint/types": "~20.2.0"
  },
  "devDependencies": {
    "@commitlint/lint": "^20.2.0",
    "@commitlint/load": "^20.2.0",
    "@jakoblierman/tsconfig": "workspace:*",
    "@types/node": "^24",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "@commitlint/cli": "^20.2.0"
  }
}
