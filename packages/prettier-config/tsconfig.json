{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@jakoblierman/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "module": "preserve",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"],
      "@test/*": ["./test/*"],
      "@workspace/*": ["../../*"]
    },
    "removeComments": false
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "dist"]
}
