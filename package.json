{
  "name": "@jakoblierman/js-tooling",
  "description": "Personal JavaScript tools and configurations",
  "version": "0.0.1",
  "author": {
    "name": "Jakob Lierman",
    "email": "jakob.lierman@gmail.com",
    "url": "https://jakoblierman.be"
  },
  "repository": "JakobLierman/js-tooling.git",
  "bugs": "https://github.com/JakobLierman/js-tooling/issues",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "turbo run build",
    "changeset": "changeset",
    "changeset:auto": "tsx scripts/auto-changeset.ts",
    "changeset:publish": "changeset publish",
    "changeset:version": "changeset version",
    "clean": "rm -rf .turbo coverage && turbo run clean",
    "dev": "turbo run dev",
    "format": "pnpm build --filter=@jakoblierman/prettier-config... && prettier --write --ignore-unknown .",
    "lint": "pnpm build --filter=@jakoblierman/eslint-config... && eslint",
    "prepare": "husky",
    "start": "turbo run start",
    "test": "turbo run test:root",
    "test:root": "dotenvx run -- vitest run"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^19.8.1",
    "@dotenvx/dotenvx": "^1.50.1",
    "@jakoblierman/commitlint-config": "workspace:*",
    "@jakoblierman/eslint-config": "workspace:*",
    "@jakoblierman/prettier-config": "workspace:*",
    "@jakoblierman/tsconfig": "workspace:*",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.36.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.0",
    "lint-staged": "*",
    "prettier": "^3.6.2",
    "syncpack": "^13.0.4",
    "tsx": "^4.20.5",
    "turbo": "~2.5.6",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "yaml": "^2.8.1"
  },
  "packageManager": "pnpm@10.17.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "unrs-resolver"
    ]
  }
}
